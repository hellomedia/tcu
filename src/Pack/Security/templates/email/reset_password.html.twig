{% extends 'email/layout/template.html.twig' %}

{% trans_default_domain 'security' %}

{% block title %}
	{% include "email/includes/_title.html.twig"
        with {
            title: 'password_reset.email.subject'|trans(locale=language)
        } 
    %}
{% endblock %}

{% block paragraphs %}
	{% embed "email/includes/_paragraph.html.twig" %}
		{% block text %}
			{{ 'password_reset.email.click_link'|trans(locale=language) }}
		{% endblock %}
	{% endembed %}
{% endblock %}

{% block button %}
	{% include "email/includes/_button.html.twig" 
        with {
            url: url('password_reset_reset', {token: resetToken.token}),
            label: 'password_reset.email.button'|trans(locale=language)
        }
    %}
{% endblock %}

{% block extra_rows %}
	{% include "email/includes/_divider.html.twig"
        with {
            top: '15px',
            bottom: '0',
        } 
    %}
	{% embed "email/includes/_paragraph.html.twig" %}
		{% block text %}
			{{ 'registration.validation_email.fallback_link'|trans(locale=language) }}
		{% endblock %}
	{% endembed %}
	{% embed "email/includes/_paragraph.html.twig" %}
		{% block text %}
	        {{ url('password_reset_reset', {token: resetToken.token})|raw }}
		{% endblock %}
	{% endembed %}
	{% embed "email/includes/_paragraph.html.twig" %}
		{% block text %}
            {{ 'password_reset.email.validity'|trans(locale=language) }}
            {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, domain='ResetPasswordBundle', locale=language) }}.
		{% endblock %}
	{% endembed %}
{% endblock %}
