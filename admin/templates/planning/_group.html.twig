<div class="group" id="group-{{ group.id }}">
    <div class="group-header">
        <h4>{{ group }}</h4>    
        {% if group.matchs is not empty %}
            {% include '@admin/planning/_secondary_actions.html.twig' %}
        {% endif %}
    </div>
    <div class="matchs">
        {% for match in group.matchs %}
            <div class="match">
                <div class="match-label">
                    {{ match }}
                </div>
                <div class="booking">
                    {% if match.booking is not null %}
                        {{ match.booking }}
                    {% else %}
                        <a class="btn btn-default"
                            style="margin-left: 5px"
                            href="{{ path('admin_planning_schedule_match', {'id': match.id}) }}"
                        >
                            Plannifier
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
        {% if group.matchs is empty %}
            <a class="btn btn-primary" href="{{ path('admin_planning_generate_group_matchs', {'id': group.id}) }}">
                Générer les matchs
            </a>
        {% endif %}
    </div>
</div>