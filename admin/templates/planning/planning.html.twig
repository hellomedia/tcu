{% extends '@EasyAdmin/page/content.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <style>
        .planning {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            /* display:grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px; */
        }
        .placeholder {
            visibility: hidden;
            width: 15px;
        }
        .group-header {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 10px;
        }
        .date {
            border: 1px solid #ddd;
            border-radius: 3px;
            padding: 15px;
        }
        .courts {
            h5 {
                text-align: center;
                white-space: nowrap;
            }
        }
        .court {
            display: inline-block;
            vertical-align: top;
            width: 250px;
        }
        .slots {
            margin-top: 15px;
            display: flex;
            flex-direction: column;
        }
        .slot-row {
            height: 60px;
            display: grid;
            grid-template-columns: 50px 150px 50px;
            gap: 5px;
            .btn {

                visibility: hidden;
                svg {
                    width: 15px;
                }
            }
            &:hover {
                .btn {
                    visibility: visible;
                }
            }
        }
        .slot-content-inner,
        .slot-actions-inner {
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .slot-actions {
            .btn {
                box-shadow: none;
                svg {
                    width: 24px;
                }
            }
        }
    </style>
{% endblock %}

{% block content_title %}Planning{% endblock %}

{% block page_actions %}

{% endblock %}


{% block main %}

    <div class="planning"
        data-controller="modal"
        data-modal-type-value="confirm"
    >
        {% for date in dates %}
            {% include '@admin/planning/planning/_date.html.twig' %}
        {% endfor %}

        {% include '@admin/modal/_confirm_modal.html.twig' %}
        {% include 'component/modal/_icons_templates.html.twig' %}

    </div>

{% endblock %}