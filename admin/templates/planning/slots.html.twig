{% extends '@EasyAdmin/page/content.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    <style>
        .planning {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
        }
        .date {
            border: 1px solid #ddd;
            border-radius: 3px;
            padding: 15px;
        }
        .courts {
            display: flex;
            gap: 20px;
            h5 {
                text-align: center;
                white-space: nowrap;
            }
        }
        .court {
        }
        .slot {
            white-space: nowrap;
        }
    </style>
{% endblock %}

{% block content_title %}Plages horaires{% endblock %}

{% block page_actions %}

    <a class="btn btn-primary" href="{{ path('admin_planning_bulk_add_slots')}}">
        + Ajouter des cr√©neaux
    </a>

{% endblock %}


{% block main %}

    <div class="planning">
        {% for date in dates %}
            <div class="date">
                <h4>{{ date }}</h4>
                <div class="courts">
                    {% for court in courts %}
                        <div class="court">
                            <h5>{{ court }}</h5>
                            <div class="slots">
                                {% for slot in date.slotsByCourt(court) %}
                                    <div class="slot">
                                        {{ slot.timeRange }}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}