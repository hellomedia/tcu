{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Dashboard
{% endblock %}

{% block main %}
 
<style>
	.homepage-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 20px;
        margin-bottom: 30px;
	}
    @media (min-width: 450px) {
        .homepage-grid {
            grid-template-columns: 1fr 1fr;
        }
    }
    h5 {
        margin-bottom: 10px;
    }
	.item {
        display: flex;
        justify-content: center; /* horizontal -- aligns the item, but not text ***inside*** the item */
        align-items: center; /* vertical */
        text-align: center; /* aligns text horizontally **inside item** when full line or multiple lines */
		height: 100px;
        border: 1px solid var(--border-color);
		border-radius: 3px;
		font-size: 20px;
        color: var(--text-color);
	}
</style>

<h5>Joueurs</h4>
<div class="homepage-grid">
	<a class="item" href="{{ path('admin_player_index') }}">
        <span>Joueurs</span>
	</a>
	<a class="item" href="{{ path('admin_group_index') }}">
		Poules
	</a>
</div>
<h5>Planning</h4>
<div class="homepage-grid">
	<a class="item" href="{{ path('admin_planning_groups') }}">
		Planning par poule
	</a>
	<a class="item" href="{{ path('admin_planning') }}">
		Planning par date
	</a>
</div>
<h5>Admin</h4>
<div class="homepage-grid">
	<a class="item" href="{{ path('admin_planning_slots') }}">
		Plages horaires
	</a>
	<a class="item" href="{{ path('admin_date_index') }}">
		
        Dates d'occupation des terrains
	</a>
	<a class="item" href="{{ path('admin_court_index') }}">
		Terrains
	</a>
	<a class="item" href="{{ path('admin_user_index') }}">
		Admins
	</a>
</div>

{% endblock %}