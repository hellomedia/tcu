<div
	id="mobile-menu"
	data-mobile-menu-target="menu"
	data-action="touchstart->mobile-menu#handleGestureStart"
>
	<div id="mobile-menu-drag-indicator">
	</div>

	{% if is_granted('ROLE_USER') %}

		<div class="pt-1 pb-2">

			{# <a href="{{ path('admin_dashboard') }}" class="mobile-menu-item {{ is_current_page('admin_dashboard') ? 'active' }}" data-action="mobile-menu#toggle">
				<twig:ux:icon name="account" class="mobile-menu-item-icon"/>
				{{ 'Dashboard'|trans }}
			</a> #}

			{# <a href="/logout" class="mobile-menu-item" data-action="mobile-menu#toggle">
				<twig:ux:icon name="logout" class="mobile-menu-item-icon"/>
				{{ 'Logout'|trans }}
			</a> #}

		</div>

		<hr>

	{% endif %}

	<div class="pt-1 pb-2">
	
		<a
			href="{{ path('homepage') }}"
			class="mobile-menu-item {{ is_current_page('homepage') ? 'active' }}"
			data-action="mobile-menu#toggle"
		>
			<twig:ux:icon name="home" class="mobile-menu-item-icon"/>
			Home
		</a>

        <a href="{{ path('interfacs') }}"
            class="mobile-menu-item {{ app.current_route starts with 'interfacs' ? 'active' }}"
            data-action="mobile-menu#toggle"
        >
            <twig:ux:icon name="trophy" class="mobile-menu-item-icon"/>
            Interfacs
        </a>

        <a href="{{ path('interclubs') }}"
            class="mobile-menu-item {{ app.current_route starts with 'interclubs' ? 'active' }}"
            data-action="mobile-menu#toggle"
        >
            <twig:ux:icon name="interclubs" class="mobile-menu-item-icon"/>
            Interclubs
        </a>
        <a href="{{ path('cours') }}"
            class="mobile-menu-item {{ app.current_route starts with 'cours' ? 'active' }}"
            data-action="mobile-menu#toggle"
        >
            <twig:ux:icon name="lessons" class="mobile-menu-item-icon"/>
            Cours
        </a>
        <a href="{{ path('practical_infos') }}"
            class="mobile-menu-item {{ app.current_route == 'practical_infos' ? 'active' }}"
            data-action="mobile-menu#toggle"
        >
            <twig:ux:icon name="practical-infos" class="mobile-menu-item-icon"/>
            Infos pratiques
        </a>


	</div>

</div>
