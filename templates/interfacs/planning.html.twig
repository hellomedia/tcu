{% extends 'layout/default.html.twig' %}

{% block body_extra_classes 'with-cards' %}

{% block content %}

    <style>
        .date {
            background-color: #fff;
            border: 0px solid #ddd;
            border-radius: 3px;
            padding: 30px;
            h4 {
                margin-top: 10px;
                margin-bottom: 5px;
                font-weight: bold;
            }
        }
        .placeholder {
            visibility: hidden;
            width: 15px;
        }
        .date-header {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 10px;
        }
        .courts {
            h5 {
                text-align: center;
                white-space: nowrap;
            }
        }
        .slots {
            margin-top: 15px;
            display: flex;
            flex-direction: column;
            gap: 3px;
        }
        .slot-row {
            height: 60px;
        }
        .slot-content {
            border: 1px dashed #ccc;
        }
        .slot-content-inner,
        .slot-actions-inner {
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        /* LAYOUT */
        .planning {
            display: grid;
            gap: 30px;
            grid-template-columns: 1fr;
        }
        .date {
            overflow-x: auto; /* add scrollbar when necessary */
        }
        .courts {
            display: flex;
            flex-wrap: wrap;
        }
        .court {
            width: 100%;
            margin-bottom: 30px;
            &.without-slots {
                display: none;
            }
        }
        .slot-row, .court-header {
            display: grid;
            grid-template-columns: 50px minmax(190px, 1fr);
            gap: 5px;
        }
        @media (min-width: 768px) {
            .planning {
                grid-template-columns: 1fr;
                &.court-count-1 {
                    grid-template-columns: repeat(2, 1fr);
                }
            }
            .courts {
                flex-wrap: nowrap;
                gap: 15px;
            }
            .court {
                width: 100%; /* makes all items the same size no matter the content */
                margin-bottom: 0;
                &.without-slots {
                    display: block;
                }
            }
            .slot-row, .court-header {
                grid-template-columns: 50px minmax(190px, 1fr);
                .btn {
                    visibility: hidden;
                }
                &:hover {
                    .btn {
                        visibility: visible;
                    }
                }
            }
        }
        @media (min-width: 1400px) {
            .planning {
                &.court-count-2 {
                    grid-template-columns: repeat(2, 1fr);
                }
            }
        }
    </style>

    <div class="planning">

        {% for date in dates %}
            <div class="date">
                <div class="date-header">
                    <h4>{{ date }}</h4>
                </div>
                <div class="courts">
                    {% for court in courts %}
                        {% set slots = date.slotsByCourt(court) %}
                        <div class="court {{ slots is empty ? 'without-slots' }}">
                            <div class="court-header">
                                <div class="court-header-placeholder"></div>
                                <h5>{{ court }}</h5>
                            </div>
                            <div class="slots">
                                {% for slot in slots %}
                                    <div class="slot-row">
                                        <div class="slot-time">
                                            {{ slot.startsAt|date('H:i') }}
                                        </div>
                                        <div class="slot-content">
                                            <div class="slot-content-inner">
                                                {# <div class="placeholder"></div> #}
                                                {% for player in slot.players %}
                                                    <span class="player">{{ player }}</span>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}

    </div>

{% endblock %}