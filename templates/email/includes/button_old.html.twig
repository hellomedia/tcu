{# escaping the url params in tokens etc is done upstream #}
{# We do NOT want to apply e('url') to the full url, which would escape '/', ':', '?', '=' and '&' in 'http://...?x=..&y=...."
   e('url') is made for escaping the parameters themselves, not the full url string #}
{# Here we apply e('html_attr') for good measure, which leaves '/', ':', '?', '=' and '&' 'alone #}
<a
	href="{{ url|e('html_attr') }}"
	style="background-color:#49a9ce;border-radius:4px;color:#ffffff;display:inline-block;padding-left:30px;padding-right:30px;font-family:sans-serif;font-size:14px;font-weight:bold;line-height:45px;text-align:center;text-decoration:none;-webkit-text-size-adjust:none;"
>
	{{ text }}
</a>
