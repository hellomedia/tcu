{% extends 'email/layout/template.html.twig' %}

{# only applies to translations evaluated in this template #}
{# for variables passed to includes, it applies #}
{# for variables inside blocks passed to embeds, it does not #}
{% trans_default_domain 'security' %}

	{% block title %}
{% include "email/includes/_title.html.twig"
        with {
            title: 'registration.validation_email.subject'|trans(locale=language)
        } 
    %}
{% endblock %}

	{% block paragraphs %}
		{% embed "email/includes/_paragraph.html.twig" %}
		{# for embeds, trans_default_domain above does NOT apply, must be redeclared here #}
			{% block text %}
		{{ 'registration.validation_email.click_link'|trans(domain='security', locale=language) }}
	{% endblock %}
{% endembed %}
{% endblock %}

	{% block button %}
{% include "email/includes/_button.html.twig" 
        with {
            url: signedUrl,
            label: 'registration.validation_email.button'|trans(locale=language)
        }
    %}
{% endblock %}

	{% block extra_rows %}
	{% include "email/includes/_spacer.html.twig"
        with {
            top: '15px',
            bottom: '0',
        } 
    %}
		{% embed "email/includes/_paragraph.html.twig" %}
		{# for embeds, trans_default_domain above does NOT apply, must be redeclared here #}
			{% block text %}
		{{ 'registration.validation_email.fallback_link'|trans(domain='security', locale=language) }}
	{% endblock %}
	{% endembed %}
		{% embed "email/includes/_paragraph.html.twig" %}
			{% block text %}
		{{ signedUrl|raw }}
	{% endblock %}
{% endembed %}{% endblock %}

